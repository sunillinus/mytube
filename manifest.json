{
  "manifest_version": 3,
  "name": "YouTube Hover Preview Enhancer",
  "version": "1.0.0",
  "description": "Add seeking, progress bar, and speed controls to YouTube hover previews and main player",
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
